    <!-- Page Content -->
    <form  action="Nusuariosvc" enctype="multipart/form-data" method="post">
        <table align="center" border="1" class="border border-dark">
            <tr>
                <td colspan="2" align="center"><h3>Registrarse</h3></td>
            </tr>
            <!---->
            <tr>
                <td>
                    <label for="formGroupExampleInput">Rut : </label>
                </td>
                <td>
                    <input type="text" class="form-control" id="rut" name="rut" required>
                </td>
            </tr>

            <tr>
                <td>
                    <label for="formGroupExampleInput">Nombre : </label>
                </td>
                <td>
                    <input type="text" class="form-control" id="nombre" name="nombre" required>
                </td>
            </tr>

            <tr>
                <td>
                    <label for="formGroupExampleInput">Apellido : </label>
                </td>
                <td>
                    <input type="text" class="form-control" id="apellido" name="apellido" required>
                </td>
            </tr>

            <tr>
                <td>
                    <label for="formGroupExampleInput">Direccion : </label>
                </td>
                <td>
                    <textarea class="form-control" id="direccion" name="direccion" rows="2"></textarea>

                </td>
            </tr>
            <tr>
                <td>
                    <label for="formGroupExampleInput">Comuna : </label>
                </td>
                <td>
                    <input type="text" class="form-control" id="comuna" name="comuna" required>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="formGroupExampleInput">Ciudad : </label>
                </td>
                <td>
                    <input type="text" class="form-control" id="ciudad" name="ciudad" required>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="formGroupExampleInput">Correo : </label>
                </td>
                <td>
                    <input type="email" class="form-control" id="correo" name="correo" required>
                </td>
            </tr>

            <tr>
                <td>
                    <label for="formGroupExampleInput">Telefono : </label>
                </td>
                <td>
                    <input type="text" class="form-control" id="telefono" name="telefono" required>
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">

                    <button type="submit" name="Registro" id="Registro" value="Registro" class="btn btn-outline-success">Registro</button>
                    &nbsp;
                    <button type="reset" name="Cancelar" id="Cancelar" value="Cancelar" class="btn btn-outline-danger">Cancelar</button>
                </td>
            </tr>


        </table>
    </form>


