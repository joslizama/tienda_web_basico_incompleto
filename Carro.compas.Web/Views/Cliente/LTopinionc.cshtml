@model IEnumerable<Carro.compas.Web.Models.opinion>

@{


    var r = Convert.ToString(Session["r"]);
    var n = Convert.ToString(Session["n"]);
    var t = Convert.ToInt32(Session["t"]);

    if (r == null || r == "" || t == null || t != 2)
    {
        Response.Redirect("~/Home/Log");
    }

}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Tipo de opiniones </title>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/JS/ValidarFiltro.js"></script>


</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <a class="navbar-brand" href="#">Tipo de opiniones</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="~/Cliente/LTopinion">Listado de tipo de opiniones</a>
                    </li>

                    <li class="nav-item active">
                        <a class="nav-link" href="~/Cliente/Lopinion">Listado de opiniones</a>
                    </li>

                    <li class="nav-item active">
                        <a class="nav-link" href="~/Cliente/Lprod">Listado de productos</a>
                    </li>

                    <li class="nav-item active">
                        <a class="nav-link" href="~/Cliente/Index_cliente">Volver al inicio</a>
                    </li>

                    <li class="nav-item active">
                        <a class="nav-link" href="~/Cliente/Csesion">Cerrar sesion</a>
                    </li>


                </ul>
            </div>
        </div>
    </nav>
    <!-- Page Content -->
    <br />

    <div>
        <a href="~/Cliente/Nopinion" class="btn btn-info">Nueva opinion </a> 
        
    </div>
   <br />


    <table id="table_id" class="display">
        <thead>
            <tr>
                <th>Fecha</th>

                <th>Producto</th>

                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td><label>@i.fecha</label></td>
                    <td><label>@i.tipo_opinion</label></td>

                    <td><label><img src="@Url.Action("GetImagen","Cliente",new {id=i.id }) " width="60" height="60"></label></td>

                    <td>
                        @Html.ActionLink("Detalles opinion", "Dopinionprod", new { id = i.id }, new { @class = "btn btn-primary" })

                    </td>

                </tr>


            }



        </tbody>
    </table>






    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.slim.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<script>

    $(document).ready(function () {
        $('#table_id').DataTable();
    });

</script>
